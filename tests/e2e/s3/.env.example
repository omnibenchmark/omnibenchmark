# Example environment configuration for S3 e2e tests
# Copy this file to .env and fill in your actual credentials

# Set to "true" to use remote S3 instead of local MinIO
OB_E2E_USE_REMOTE_S3=false

# S3 credentials (required when using remote S3)
# For local MinIO, these will be set automatically by the setup script
OB_STORAGE_S3_ACCESS_KEY=your-access-key-here
OB_STORAGE_S3_SECRET_KEY=your-secret-key-here

# S3 endpoint URL
# For AWS S3: https://s3.eu-central-1.amazonaws.com (European region)
# For MinIO: http://localhost:9000
# For other S3-compatible services: specify the full endpoint URL
OB_STORAGE_S3_ENDPOINT_URL=https://s3.eu-central-1.amazonaws.com

# AWS region (optional, defaults to eu-central-1 for European setup)
AWS_DEFAULT_REGION=eu-central-1

# Additional S3 configuration (optional)
# Set to "true" to use path-style addressing (required for some MinIO setups)
OB_STORAGE_S3_FORCE_PATH_STYLE=false

# Test configuration
# Set to "true" to keep test files for debugging
OB_E2E_KEEP_FILES=false

# Bucket prefix for CI tests (will be suffixed with timestamp)
# This helps avoid conflicts when multiple CI jobs run simultaneously  
OB_E2E_BUCKET_PREFIX=obdata-ci

# CI Environment Detection
# Set to "true" in CI to automatically use remote S3
CI=false

# Timeout settings (in seconds)
OB_E2E_MINIO_STARTUP_TIMEOUT=120
OB_E2E_TEST_TIMEOUT=300