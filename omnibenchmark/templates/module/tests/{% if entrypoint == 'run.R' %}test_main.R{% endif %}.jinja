# Tests for main.R functions

library(testthat)

# Source the main functions
source("../src/main.R")

test_that("add_numbers works correctly", {
  expect_equal(add_numbers(2, 3), 5)
  expect_equal(add_numbers(-1, 1), 0)
  expect_equal(add_numbers(0, 0), 0)
})

test_that("add_numbers handles different types", {
  expect_equal(add_numbers(2.5, 3.5), 6.0)
  expect_equal(add_numbers(1L, 2L), 3)
})
