cff-version: 1.2.0
message: "If you use this benchmark, please cite it as below."
type: software
title: "{{ benchmark_name }}"
authors:
  - family-names: "{{ author_name.split()[-1] if ' ' in author_name else author_name }}"
    given-names: "{{ author_name.split()[0] if ' ' in author_name else '' }}"
    email: "{{ author_email }}"
version: "0.1.0"
date-released: "{{ '%Y-%m-%d' | strftime }}"
url: "https://github.com/CHANGE_ME/{{ benchmark_name }}"
abstract: "{{ description if description else 'A benchmark created with OmniBenchmark' }}"
license: {{ license }}
keywords:
  - benchmark
  - bioinformatics
  - omnibenchmark
